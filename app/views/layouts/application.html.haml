!!!
%html
  %head
    %title Parking Web App

    = stylesheet_link_tag "jquery-ui.css", :cache => true
    = stylesheet_link_tag "formtastic.css", :cache => true
    = stylesheet_link_tag "jquery.tipsy.css", :cache => true
    = stylesheet_link_tag "uniform.default.css", :cache => true

    = javascript_include_tag "http://ajax.googleapis.com/ajax/libs/jquery/1.5.1/jquery.min.js", :cache => true
    = javascript_include_tag "jquery-ui.min.js", :cache => true
    = javascript_include_tag "jquery.scrollTo.js", :cache => true
    = javascript_include_tag "jquery.localscroll.js", :cache => true
    = javascript_include_tag "application.js", :cache => true
    = javascript_include_tag "jquery.tipsy.js", :cache => true
    = javascript_include_tag "jquery.uniform.min.js", :cache => true
 
    = stylesheet_link_tag "base", "themes/activo/style", "override", :cache => true
    = javascript_include_tag :defaults, :cache => true

    = csrf_meta_tag
  %body
    #container
      #header
        .logo
        #user-navigation
          %ul.wat-cf
            %li
              = link_to image_tag('/stylesheets/themes/activo/images/session/home.png', :alt => 'Home', :title => 'Home'), "/"
            %li
              = link_to image_tag('/stylesheets/themes/activo/images/session/account.png', :alt => 'Account', :title => 'Account'), "#"
            %li
              = link_to image_tag('/stylesheets/themes/activo/images/session/config.png', :alt => 'Config', :title => 'Config'), "#"
            %li
              = link_to image_tag('/stylesheets/themes/activo/images/session/logout.png', :alt => 'Logout', :title => 'Logout'), destroy_user_session_path
        #main-navigation
          %ul.wat-cf
            %li{ :class => (params[:controller] == "home" ? "first active" : "first") }
              = link_to "Home", root_path
            %li{ :class => (params[:controller] == "tickets" ? "active" : nil) }
              = link_to "Tickets", tickets_path
      #wrapper.wat-cf
        .flash
          - flash.each do |type, message|
            %div{:class => "message #{type}"}
              %p= message
        #main
          = yield
          #footer
            %p Copyright &copy; #{Time.now.year} Parking Web App.
        #sidebar
          = yield :sidebar
