.block
  .secondary-navigation
    %ul.wat-cf
      %li.first= link_to "#{t("web-app-theme.list", :default => "List")}", tickets_path
      %li= link_to "#{t("web-app-theme.new", :default => "New")}", new_ticket_path
      %li.active= link_to "#{t("web-app-theme.show", :default => "Show")}", ticket_path
  .content
    .inner
      %p
        %b
          = t("activerecord.attributes.ticket.folio", :default => t("activerecord.labels.folio", :default => "Folio"))
          \:
        = @ticket.folio
      %p
        %b
          = t("activerecord.attributes.ticket.licenseplate", :default => t("activerecord.labels.licenseplate", :default => "Licenseplate"))
          \:
        = @ticket.licenseplate
      %p
        %b
          = t("activerecord.attributes.ticket.note", :default => t("activerecord.labels.note", :default => "Note"))
          \:
        = @ticket.note
      .wat-cf
        = link_to image_tag("web-app-theme/icons/application_edit.png", :alt => "#{t("web-app-theme.edit", :default=> "Edit")}") + " " + t("web-app-theme.edit", :default=> "Edit"), edit_ticket_path(@ticket), :class => "button"
        = link_to image_tag("web-app-theme/icons/cross.png", :alt => "#{t("web-app-theme.delete", :default=> "Delete")}") + " " + t("web-app-theme.delete", :default => "Delete"), ticket_path(@ticket), :method => "delete", :class => "button", :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}"
- content_for :sidebar, render(:partial => 'sidebar')
